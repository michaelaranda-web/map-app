<div class="global-header full-width">
  <a href="<%= root_path %>">
    <div id="site-logo">MapApp</div>
  </a>
  
  <% if user_signed_in? %>
    <div class="sign-in-link right">
      <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    </div>
  <% else %>
    <div class="sign-in-link right">
      <%= link_to "Log In", new_user_session_path %>
    </div>
    <div class="sign-in-link right">
      <%= link_to "Sign Up", new_user_registration_path %>
    </div>
  <% end %>
  
</div>